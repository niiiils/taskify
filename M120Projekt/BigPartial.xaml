<UserControl x:Class="taskify.BigPartial"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:taskify"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border x:Name="greatPartial" CornerRadius="10" Margin="50" Grid.ColumnSpan="2">
            <Border.Background>
                <LinearGradientBrush EndPoint="0,0.5" StartPoint="-0.5,0">
                    <GradientStop Color="#FFFFFF" Offset="0.0" x:Name="gradientStop5"/>
                    <GradientStop Color="#FFFFFF" Offset="1.0" x:Name="gradientStop4"/>
                </LinearGradientBrush>
            </Border.Background>
            <Border.Effect>
                <DropShadowEffect Direction="270" Opacity="0.2" ShadowDepth="0" BlurRadius="40" RenderingBias="Quality" Color="Black"/>
            </Border.Effect>
        </Border>
    </Grid>
</UserControl>
